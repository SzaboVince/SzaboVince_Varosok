<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nevtext"
        android:textSize="25sp"
        android:hint="Név"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/orszagtext2"
        android:textSize="25sp"
        android:hint="Ország"
        android:layout_below="@+id/nevtext"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lakossagtext"
        android:textSize="25sp"
        android:hint="Lakosság"
        android:layout_below="@+id/orszagtext2"
        android:inputType="number"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/felvetelbtn2"
        android:layout_below="@+id/lakossagtext"
        android:textSize="25sp"
        android:text="Felvétel"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/visszabtn2"
        android:layout_below="@+id/felvetelbtn2"
        android:textSize="25sp"
        android:text="Vissza"/>

</RelativeLayout>